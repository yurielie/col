If:
    PathMatch: .*

CompileFlags:
    Add:
      - -std=c++23
      - -stdlib=libc++
      - -Wall
      - -Wextra
      - -Wpedantic
      - -Wdeprecated
      - -Weverything
      - -Wno-c++98-compat
      - -Wno-c++98-compat-pedantic
      - -Wno-c++20-compat
      - -Wno-padded
      - -Wno-unsafe-buffer-usage
      - --pedantic-errors
      - -fno-exceptions
      - -fno-rtti
      - -fmodules
      - -I
      - ./include
    Compiler: clang++-22

InlayHints:
    Enabled: Yes
    ParameterNames: Yes
    DeducedTypes: No
    Designators: No

Documentation:
  CommentFormat: Markdown